digraph "Freytag's Pyramid" {
	rankdir=BT
	{
		rank=same
		exposition [label="Exposition
(Exposition not provided)"]
		denouement [label="Denouement
(Denouement not provided)"]
	}
	{
		rank=same
		rising_action [label="Rising Action
(Rising Action not provided)"]
		falling_action [label="Falling Action
(Falling Action not provided)"]
	}
	climax [label="Climax
(Climax not provided)"]
	exposition -> rising_action
	rising_action -> climax
	climax -> falling_action
	falling_action -> denouement
}
